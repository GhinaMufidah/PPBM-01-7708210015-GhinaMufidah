<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView"
        android:layout_marginTop="-53dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/planetxcompact"
        android:text="Registration"
        android:textColor="@color/gold"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="369dp"
        android:layout_height="573dp"
        android:layout_centerInParent="true"
        android:src="@drawable/square_bg" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="-130dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="470dp"
        android:hint="username"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp"
        android:background="@drawable/white_bg"
        android:inputType="text"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="400dp"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp"
        android:background="@drawable/white_bg"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/passwordEditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="330dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp"
        android:background="@drawable/white_bg" />

    <EditText
        android:id="@+id/passwordEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="260dp"
        android:hint="Password again"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp"
        android:background="@drawable/white_bg" />

    <Button
        android:id="@+id/registrasi"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/button"
        android:padding="15dp"
        android:text="Registrasi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrasi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-180dp"
        android:fontFamily="@font/nasa"
        android:text="-----------OR-----------"
        android:textColor="@color/primarycolor"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/gogle"
        android:layout_below="@id/registrasi"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-130dp"
        />

    <ImageView
        android:id="@+id/imageViewyt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/youtube_2504965"
        android:layout_below="@id/registrasi"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="-130dp"
        />

    <ImageView
        android:id="@+id/imageViewtwt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/apple_2504884"
        android:layout_below="@id/registrasi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-130dp"
        />

</RelativeLayout>
